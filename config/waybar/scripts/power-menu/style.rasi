/*****----- Message -----*****/
message {
    enabled:                     true;
    margin:                      0px;
    padding:                     12px;
    border:                      2px solid;
    border-radius:               10px;
    border-color:                #ffffff;
    background-color:            #4c4dab;
    text-color:                  #ffffff;
}
textbox {
    background-color:            inherit;
    text-color:                  inherit;
    vertical-align:              0.5;
    horizontal-align:            0.5;
    placeholder-color:           #cdd6f4;
    blink:                       true;
    markup:                      true;
}
error-message {
    padding:                     12px;
    border:                      2px solid;
    border-radius:               10px;
    border-color:                #f9e2af;
    background-color:            #4c4dab;
    text-color:                  #cdd6f4;
}

/*****----- Listview -----*****/
listview {
    enabled:                     true;
    columns:                     5;
    lines:                       1;
    cycle:                       true;
    dynamic:                     true;
    scrollbar:                   false;
    layout:                      vertical;
    reverse:                     false;
    fixed-height:                true;
    fixed-columns:               true;
    
    spacing:                     10px;
    margin:                      0px;
    padding:                     0px;
    border:                      0px solid;
    border-radius:               10px;
    border-color:                #585b70;
    background-color:            #4c4dab;
    text-color:                  #cdd6f4;
    cursor:                      "default";
}

/*****----- Elements -----*****/
element {
    enabled:                     true;
    spacing:                     0px;
    margin:                      0px;
    padding:                     10px 10px;
    border:                      0px solid;
    border-radius:               10px;
    border-color:                #ffffff;
    background-color:            #4c4dab;
    text-color:                  #ffffff;
    cursor:                      pointer;
}

element-text {
    font:                        "feather bold 32";
    background-color:            transparent;
    text-color:                  inherit;
    cursor:                      inherit;
    vertical-align:              0.5;
    horizontal-align:            0.5;
}

element selected.normal {
    border:                      2px solid;
    border-color:                #ffffff;
    background-color:            #ffffff;
    text-color:                  #4c4dab;
}

